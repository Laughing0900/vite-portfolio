{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    /* Module Resolution */
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    /* Emit */
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    /* Plugins */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./src",
    "./dist/types/**/*.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}